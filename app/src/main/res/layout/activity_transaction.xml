<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent" android:layout_height="match_parent">

    <ImageView
        android:layout_width="match_parent"
        android:id="@+id/ibanPic"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <Button
        android:text="Take Photo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/takePhoto"
        android:layout_below="@+id/ibanPic"
        android:layout_alignLeft="@+id/scanIBAN"
        android:layout_alignStart="@+id/scanIBAN"
        android:layout_marginTop="19dp" />

    <Button
        android:text="Scan IBAN"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/scanIBAN"
        android:layout_below="@+id/takePhoto"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="11dp" />

    <TextView
        android:text="Result"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/resultText"
        android:textAlignment="center"
        android:textSize="18sp"
        android:textColor="@android:color/black"
        android:layout_below="@+id/scanIBAN"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginTop="23dp" />
</RelativeLayout>