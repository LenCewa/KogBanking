<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:text="Transaction from"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/transID"
        android:textSize="18sp"
        android:textColor="@android:color/white"
        android:fontFamily="serif" />

    <TextView
        android:layout_below="@+id/transID"
        android:text="Transaction topic"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:id="@+id/topic"
        android:textSize="18sp"
        android:textColor="@android:color/white"
        android:fontFamily="serif" />

    <TextView
        android:text="Amount"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/amount"
        android:layout_alignEnd="@+id/transID"
        android:layout_alignRight="@+id/transID"
        android:layout_alignBottom="@+id/topic"
        android:layout_alignTop="@+id/transID"
        android:layout_marginTop="30dp"
        android:textSize="24sp"
        android:textColor="@android:color/white"
        android:fontFamily="serif" />

    <TextView
        android:text="Date"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/topic"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginTop="10dp"
        android:id="@+id/date"
        android:textSize="18sp"
        android:fontFamily="serif"
        android:textColor="@android:color/white" />
</RelativeLayout>